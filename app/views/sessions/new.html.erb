<% provide(:title, "Sign in") %>
<h1>Sign in</h1>
<div class="container">
	<%= form_for(:session, url: sessions_path) do |f| %>
	<p>
      <%= f.label :email %><br>
      <%= f.text_field :email %>
	</p>
	<p>
      <%= f.label :password_digest, "password" %><br>
      <%= f.password_field :password_digest %>
	</p>
      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>
    <% if(flash[:error]) %>
    <div class="alert alert-danger wrong_cred" role="alert">
    <%= flash[:error] %>
    <% end %>
    </div>
</div>