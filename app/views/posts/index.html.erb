<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>
<% if is_logged_in? %>
<%= link_to 'New Post', new_post_path %>
<% end %>
<% @posts.each do |entry| %>
<% if entry.is_published %>
  <div class="row post_entry">
    <div class="post_image col-md-10 col-md-offset-1">
      <img src="images/<%= entry.image_url %>" alt="">
    </div>
    <div class="col-md-10 col-md-offset-1">
      <h3 class="post_title"><%= entry.title %> 
      <% if entry.user %>
      <span class="author_ref"><i>by</i> '<%= entry.user.user_name %>'</span>
      <% end %>
      </h3>
    </div>
    <div class="col-md-10 col-md-offset-1">
      <p class="post_content">
        <%= entry.content %>
      </p>
      <p><%= link_to 'Show', entry %> 
      <% if is_logged_in? && entry.user_id == session[:user_id] %>
       | <%= link_to 'Edit', edit_post_path(entry) %> 
       | <%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
     
      </p>
    </div>
 
  </div>
  <% else %>

  <% end %>

<% end %>

<br>


